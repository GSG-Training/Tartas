<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="280dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@drawable/readus"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        android:background="@drawable/readus"
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="45dp"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/name_cakes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="8dp"
                tools:text="Moulin Rouge"
                android:textColor="@color/black" />

            <RatingBar
                android:padding="8dp"
                android:id="@+id/simpleRatingBar_cakes"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="6"
                android:rating="2.5"
                android:stepSize="0.1"
                android:clickable="true" />


            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:id="@+id/description_cakes"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                tools:text="Our classic red"
                android:minLines="1"
                android:maxLines="1"
                android:paddingLeft="8dp" />

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/price_cakes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:text="$49.99"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_cakes"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|center"
            android:src="@drawable/loadgif" />
    </RelativeLayout>

</FrameLayout>